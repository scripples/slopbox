# Cludbox — Local Development Environment Variables

# ── Core ──────────────────────────────────────────────────────────
DATABASE_URL=postgres://cludbox:cludbox_dev@localhost:8322/cludbox
CONTROL_PLANE_API_KEY=dev-secret-key-change-me

# ── API Server ────────────────────────────────────────────────────
LISTEN_ADDR=0.0.0.0:8080
MONITOR_INTERVAL_SECS=60
RUST_LOG=info

# ── Forward Proxy ─────────────────────────────────────────────────
PROXY_LISTEN_ADDR=0.0.0.0:3128
PROXY_EXTERNAL_ADDR=cb-api:3128


# ── Fly.io Provider ──────────────────────────────────────────────
FLY_API_TOKEN=
FLY_APP_NAME=cludbox-agents
FLY_REGION=iad

# ── Hetzner Cloud Provider ───────────────────────────────────────
# (only needed if VPS_PROVIDER=hetzner)
HETZNER_API_TOKEN=
HETZNER_LOCATION=fsn1
HETZNER_NETWORK_ID=
HETZNER_FIREWALL_ID=
HETZNER_SSH_KEY_NAMES=
